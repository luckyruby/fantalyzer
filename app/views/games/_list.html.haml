%hr
- if @games.present?
  %h3= "Games for #{@player.name}"
  %table{class: "table table-bordered table-striped table-hover table-condensed"}
    %thead
      %tr
        %th Date
        %th Opp.
        %th Score
        %th Min
        %th FGM
        %th FGA
        %th FG%
        %th 3PM
        %th 3PA
        %th 3PT%
        %th FTM
        %th FTA
        %th FT%
        %th Off
        %th Def
        %th Reb
        %th Ast
        %th TO
        %th Stl
        %th Blk
        %th PF
        %th Pts
        %th FP
      %tbody
        - @games.each do |g|
          %tr
            %td= g.game_date.strftime("%b %d")
            %td= g.opponent
            %td= g.score
            %td= g.minutes
            %td= g.field_goals_made
            %td= g.field_goals_attempted
            %td= g.field_goal_percentage
            %td= g.three_points_made
            %td= g.three_points_attempted
            %td= g.three_point_percentage
            %td= g.free_throws_made
            %td= g.free_throws_attempted
            %td= g.free_throw_percentage
            %td= g.offensive_rebounds
            %td= g.defensive_rebounds
            %td= g.rebounds
            %td= g.assists
            %td= g.turnovers
            %td= g.steals
            %td= g.blocks
            %td= g.personal_fouls
            %td= g.points
            %th= g.fanduel
- else
  .no_results No Games Found
